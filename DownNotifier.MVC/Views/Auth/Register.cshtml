@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>



<div class="p-3 rounded-1 border shadow-sm" style="max-width:400px; margin:0 auto; background-color:#eee;">
    <form method="post" class="d-flex flex-column">
        <label for="name" class="form-label" style="font-size:.9rem;">Name:</label>
        <input type="text" class="form-control" id="name" name="Name" placeholder="John Doe" />
        <label for="email" class="form-label mt-3" style="font-size:.9rem;">Email Address:</label>
        <input type="text" class="form-control" id="email" name="Email" placeholder="email@example.com" />
        <label for="password" class="form-label mt-3" style="font-size:.9rem;">Password:</label>
        <input type="password" class="form-control" id="password" name="Password" />
        <button type="submit" class="btn btn-primary mt-4">Create Account</button>
        @{
            if (ViewBag.ErrorMessage != null)
            {
                <p style="color:red; font-size:.9rem;">@ViewBag.ErrorMessage</p>
            }
        }
    </form>
</div>